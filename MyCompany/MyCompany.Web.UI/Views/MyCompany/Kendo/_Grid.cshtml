@using MyCompany.Web.Mvc.Models
@model KendoModel

@(Html.Kendo().Grid<Customer>()
    .Name("GenerationGrid")
    .Columns(columns =>
    {
        columns.Bound(c => c.Id).Width(28);
        columns.Bound(c => c.FirstName).Title("First Name").Width(100);
        columns.Bound(c => c.LastName).Title("Last Name").Width(100);
        columns.Bound(c => c.Generation).Title("Generation").Width(150).EditorTemplateName("_GridGenerationList");
        columns.Bound(c => c.RegistrationDate).Title("Registration Date").Width(250).Format("{0:MM/dd/yyyy HH:mm}").EditorTemplateName("_GridDateTimePicker");
        columns.Bound(c => c.Salary).Title("Salary").Width(80);
        columns.Command(command => command.Edit()).Width(100);
    })
    .ToolBar(toolbar => toolbar.Create())
    .Pageable()
    .Sortable()
    .Navigatable()
    .Editable(editable => editable.Mode(GridEditMode.InLine))
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(10)
        .Events(events => events.Error("error_handler"))
        .Model(model =>
        {
            model.Id(e => e.Id);
            model.Field(c => c.Id).Editable(false);
        })
        .Create(update => update.Action("EditingInline_Create", "Kendo"))
        .Read(read => read.Action("Editing_Read", "Kendo"))
        .Update(update => update.Action("EditingInline_Update", "Kendo")))
      )