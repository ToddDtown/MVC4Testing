@using MyCompany.Web.Mvc.Models
@model KendoModel

@(Html.Kendo().Grid<Customer>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(c => c.Id).Width(20);
        columns.Bound(c => c.FirstName).Width(140).Title("First Name");
        columns.Bound(c => c.LastName).Width(140).Title("Last Name");
        columns.Bound(c => c.Generation).Width(80);
        columns.Bound(c => c.RegistrationDate).Width(200).Title("Registration Date");
        columns.Command(command => { command.Edit(); command.Destroy(); }).Width(74);
    })
    .ToolBar(toolbar => toolbar.Create())
    .Editable(editable =>
    {
        editable.Mode(GridEditMode.InLine);
        editable.DisplayDeleteConfirmation(false);
    })
    .Pageable()
    .Sortable()
    .Scrollable()
    .HtmlAttributes(new { style = "height:730px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .Events(events => events.Error("error_handler"))
    .Model(model =>
    {
        model.Id(c => c.Id);
        model.Field(c => c.Id).Editable(false);
    })
    .Create(update => update.Action("EditingInline_Create", "Kendo"))
    .Read(read => read.Action("Editing_Read", "Kendo"))
    .Update(update => update.Action("EditingInline_Update", "Kendo"))
    .Destroy(update => update.Action("EditingInline_Destroy", "Kendo"))
    )
)
