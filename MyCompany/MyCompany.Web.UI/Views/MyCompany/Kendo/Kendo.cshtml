@using MyCompany.Web.Mvc.Models
@model KendoModel

@{
    ViewBag.Title = "Telerik Controls";
}
<h1>Telerik Grid Controls</h1>
@Html.Link("Inline Edit Grid", "/?grid=inline")<br />
@Html.Link("Batch Edit Grid", "/?grid=batch")<br/>
@Html.Link("Batch Edit with Dropdown Grid", "/?grid=batchwithdd")
<br/><br />

@if (Model.GridType != null)
{
    if (Model.GridType.ToLower() == "inline")
    {
        @Html.Partial("_InlineEditGrid", Model)
    }
    else if (Model.GridType.ToLower() == "batch")
    {
        @Html.Partial("_BatchEditGrid")
    }
    else if (Model.GridType.ToLower() == "batchwithdd")
    {
        @Html.Partial("_BatchEditWithDropdownGrid")
    }
}

@section StartupScripts
{
    <script type="text/javascript">
        
        function error_handler(e) {
            if (e.errors) {
                var message = "Errors:\n";
                $.each(e.errors, function (key, value) {
                    if ('errors' in value) {
                        $.each(value.errors, function () {
                            message += this + "\n";
                        });
                    }
                });
                alert(message);
            }
        }
        
    </script>
}